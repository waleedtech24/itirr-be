FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 8080

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

COPY . .

RUN dotnet restore "ITIRR.Web/ITIRR.Web.csproj"
RUN dotnet publish "ITIRR.Web/ITIRR.Web.csproj" -c Release -o /app/publish --no-restore

FROM base AS final
WORKDIR /app
COPY --from=build /app/publish .

RUN ls -la

ENTRYPOINT ["dotnet", "ITIRR.Web.dll"]