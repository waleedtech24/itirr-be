@model ITIRR.Admin.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Login - ITIRR</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/admin-variables.css" asp-append-version="true" />

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #4A2C5B 0%, #7B5A8E 50%, #4A2C5B 100%);
            position: relative;
            overflow: hidden;
        }

        /* Animated Background Elements */
        .bg-decoration {
            position: absolute;
            border-radius: 50%;
            opacity: 0.1;
            animation: float 20s infinite ease-in-out;
        }

            .bg-decoration:nth-child(1) {
                width: 300px;
                height: 300px;
                background: white;
                top: -100px;
                left: -100px;
                animation-delay: 0s;
            }

            .bg-decoration:nth-child(2) {
                width: 200px;
                height: 200px;
                background: white;
                bottom: -50px;
                right: -50px;
                animation-delay: 5s;
            }

            .bg-decoration:nth-child(3) {
                width: 150px;
                height: 150px;
                background: white;
                top: 50%;
                right: 10%;
                animation-delay: 10s;
            }

        /* Car Icons Floating */
        .floating-icon {
            position: absolute;
            color: rgba(255, 255, 255, 0.1);
            font-size: 4rem;
            animation: float 15s infinite ease-in-out;
        }

            .floating-icon:nth-child(4) {
                top: 10%;
                left: 15%;
                animation-delay: 2s;
            }

            .floating-icon:nth-child(5) {
                bottom: 20%;
                left: 10%;
                animation-delay: 7s;
            }

            .floating-icon:nth-child(6) {
                top: 30%;
                right: 20%;
                animation-delay: 12s;
            }

        @@keyframes float {
            0%, 100%

        {
            transform: translateY(0) rotate(0deg);
        }

        25% {
            transform: translateY(-20px) rotate(5deg);
        }

        50% {
            transform: translateY(-40px) rotate(-5deg);
        }

        75% {
            transform: translateY(-20px) rotate(3deg);
        }

        }

        .login-container {
            max-width: 480px;
            width: 90%;
            position: relative;
            z-index: 10;
        }

        .login-card {
            background: white;
            border-radius: 24px;
            box-shadow: 0 30px 60px rgba(0, 0, 0, 0.4);
            overflow: hidden;
            animation: slideUp 0.6s ease-out;
        }

        @@keyframes slideUp {
            from

        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .login-header {
            background: linear-gradient(135deg, #4A2C5B 0%, #7B5A8E 100%);
            color: white;
            padding: 3rem 2rem;
            text-align: center;
            position: relative;
        }

        .login-logo {
            max-width: 200px;
            height: auto;
            margin-bottom: 1.5rem;
            filter: drop-shadow(0 4px 8px rgba(0,0,0,0.2));
        }

        .login-header h1 {
            margin: 0;
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .login-header p {
            margin: 0;
            font-size: 0.95rem;
            opacity: 0.95;
            font-weight: 300;
        }

        .login-body {
            padding: 2.5rem;
        }

        .welcome-text {
            text-align: center;
            margin-bottom: 2rem;
        }

            .welcome-text h2 {
                font-size: 1.5rem;
                color: #2C3E50;
                margin-bottom: 0.5rem;
                font-weight: 600;
            }

            .welcome-text p {
                color: #6C757D;
                font-size: 0.9rem;
            }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-weight: 600;
            color: #2C3E50;
            margin-bottom: 0.75rem;
            font-size: 0.9rem;
        }

            .form-label i {
                color: #4A2C5B;
            }

        .input-group {
            position: relative;
        }

        .input-group-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #6C757D;
            z-index: 10;
        }

        .form-control {
            width: 100%;
            padding: 1rem 1rem 1rem 3rem;
            border: 2px solid #E9ECEF;
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: #F8F9FA;
        }

            .form-control:focus {
                outline: none;
                border-color: #4A2C5B;
                background: white;
                box-shadow: 0 0 0 4px rgba(74, 44, 91, 0.1);
            }

        .form-check {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 1.5rem;
        }

        .form-check-input {
            width: 20px;
            height: 20px;
            cursor: pointer;
            border: 2px solid #DEE2E6;
        }

            .form-check-input:checked {
                background-color: #4A2C5B;
                border-color: #4A2C5B;
            }

        .form-check-label {
            cursor: pointer;
            user-select: none;
            color: #6C757D;
        }

        .btn-signin {
            width: 100%;
            padding: 1rem;
            background: linear-gradient(135deg, #4A2C5B 0%, #7B5A8E 100%);
            border: none;
            border-radius: 12px;
            color: white;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
        }

            .btn-signin:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(74, 44, 91, 0.4);
            }

            .btn-signin:active {
                transform: translateY(0);
            }

        .alert {
            border-radius: 12px;
            padding: 1rem;
            margin-bottom: 1.5rem;
            border: none;
            display: flex;
            align-items: start;
            gap: 0.75rem;
        }

        .alert-danger {
            background: #FFF5F5;
            color: #C53030;
            border-left: 4px solid #C53030;
        }

        .invalid-feedback {
            color: #DC3545;
            font-size: 0.875rem;
            margin-top: 0.5rem;
            display: block;
        }

        .login-footer {
            text-align: center;
            padding: 1.5rem;
            background: #F8F9FA;
            color: #6C757D;
            font-size: 0.875rem;
            border-top: 1px solid #E9ECEF;
        }

        .vehicle-icons {
            display: flex;
            justify-content: center;
            gap: 1.5rem;
            margin-top: 1rem;
            opacity: 0.6;
        }

            .vehicle-icons i {
                font-size: 1.5rem;
                color: #4A2C5B;
            }

        @@media (max-width: 576px) {
            .login-card

        {
            border-radius: 16px;
        }

        .login-header {
            padding: 2rem 1.5rem;
        }

        .login-body {
            padding: 1.5rem;
        }

        .login-logo {
            max-width: 160px;
        }

        }
    </style>
</head>
<body>
    <!-- Animated Background -->
    <div class="bg-decoration"></div>
    <div class="bg-decoration"></div>
    <div class="bg-decoration"></div>
    <i class="bi bi-car-front-fill floating-icon"></i>
    <i class="bi bi-airplane floating-icon"></i>
    <i class="bi bi-water floating-icon"></i>

    <div class="login-container">
        <div class="login-card">
            <!-- Header -->
            <div class="login-header">
                <img src="~/images/itirr-logo.png" alt="ITIRR" class="login-logo" />
                <h1>Admin Portal</h1>
                <p>Luxury Vehicle Rental Management</p>
                <div class="vehicle-icons">
                    <i class="bi bi-car-front"></i>
                    <i class="bi bi-airplane"></i>
                    <i class="bi bi-water"></i>
                </div>
            </div>

            <!-- Body -->
            <div class="login-body">
                <div class="welcome-text">
                    <h2>Welcome Back!</h2>
                    <p>Sign in to manage your luxury rental platform</p>
                </div>

                <form asp-action="Login" method="post">
                    <input type="hidden" asp-for="@ViewData["ReturnUrl"]" />

                    <!-- Validation Summary -->
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-circle-fill"></i>
                            <div asp-validation-summary="ModelOnly"></div>
                        </div>
                    }

                    <!-- Email -->
                    <div class="form-group">
                        <label asp-for="Email" class="form-label">
                            <i class="bi bi-envelope-fill"></i>
                            Email Address
                        </label>
                        <div class="input-group">
                            <i class="bi bi-person-fill input-group-icon"></i>
                            <input asp-for="Email" class="form-control" placeholder="admin@itirr.co.uk" />
                        </div>
                        <span asp-validation-for="Email" class="invalid-feedback"></span>
                    </div>

                    <!-- Password -->
                    <div class="form-group">
                        <label asp-for="Password" class="form-label">
                            <i class="bi bi-lock-fill"></i>
                            Password
                        </label>
                        <div class="input-group">
                            <i class="bi bi-key-fill input-group-icon"></i>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                        </div>
                        <span asp-validation-for="Password" class="invalid-feedback"></span>
                    </div>

                    <!-- Remember Me -->
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                        <label asp-for="RememberMe" class="form-check-label">
                            Keep me signed in
                        </label>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn-signin">
                        <i class="bi bi-box-arrow-in-right"></i>
                        Sign In to Dashboard
                    </button>
                </form>
            </div>

            <!-- Footer -->
            <div class="login-footer">
                <small>&copy; 2025 ITIRR. All rights reserved. | Luxury Vehicle Rentals</small>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>