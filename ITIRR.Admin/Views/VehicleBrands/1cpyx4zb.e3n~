@model IEnumerable<ITIRR.Core.Entities.VehicleBrand>
@{
    ViewData["Title"] = "Vehicle Brands";
}

<div class="page-header">
    <h1><i class="bi bi-bookmark"></i> Vehicle Brands</h1>
    <div class="page-actions">
        <a asp-action="Create" class="btn btn-purple">
            <i class="bi bi-plus-circle"></i> Add Brand
        </a>
    </div>
</div>

<!-- Filters -->
<div class="row mb-4">
    <div class="col-md-4">
        <label class="form-label">Filter by Vehicle Type</label>
        <select class="form-control" id="typeFilter" onchange="filterByType(this.value)">
            <option value="">All Types</option>
            @foreach (var type in (SelectList)ViewBag.VehicleTypes)
            {
                <option value="@type.Value">@type.Text</option>
            }
        </select>
    </div>
    <div class="col-md-8">
        <label class="form-label">Search</label>
        <input type="text" id="searchInput" class="form-control" placeholder="Search brands..." />
    </div>
</div>

<!-- Grid View -->
<div class="row">
    @foreach (var brand in Model)
    {
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h5 class="card-title mb-0">@brand.Name</h5>
                        <div class="dropdown">
                            <button class="btn btn-sm btn-link text-secondary p-0" type="button" data-bs-toggle="dropdown">
                                <i class="bi bi-three-dots-vertical"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@brand.Id"><i class="bi bi-pencil"></i> Edit</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="#" onclick="deleteBrand('@brand.Id', '@brand.Name')"><i class="bi bi-trash"></i> Delete</a></li>
                            </ul>
                        </div>
                    </div>
                    <p class="mb-2"><span class="badge badge-info">@brand.Code</span></p>
                    <p class="mb-2"><span class="badge badge-purple">@brand.VehicleType?.Name</span></p>
                    <span class="badge @(brand.IsActive ? "badge-success" : "badge-danger")">
                        @(brand.IsActive ? "Active" : "Inactive")
                    </span>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="empty-state">
        <div class="empty-state-icon"><i class="bi bi-bookmark"></i></div>
        <h3 class="empty-state-title">No Brands Found</h3>
        <p class="empty-state-text">Add your first vehicle brand.</p>
        <a asp-action="Create" class="btn btn-purple">
            <i class="bi bi-plus-circle"></i> Add First Brand
        </a>
    </div>
}

@section Scripts {
    <script>
        document.getElementById('searchInput').addEventListener('input', ITIRRAdmin.debounce(function() {
            const searchTerm = this.value.toLowerCase();
            const cards = document.querySelectorAll('.col-md-6');
            cards.forEach(card => {
                card.style.display = card.textContent.toLowerCase().includes(searchTerm) ? '' : 'none';
            });
        }, 300));

        function filterByType(typeId) {
            window.location.href = typeId ? '@Url.Action("Index")?vehicleTypeId=' + typeId : '@Url.Action("Index")';
        }

        function deleteBrand(id, name) {
            ITIRRAdmin.confirm(
                `Delete "${name}"?`,
                'Delete Brand',
                function() {
                    fetch('@Url.Action("Delete")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                        },
                        body: JSON.stringify({ id: id })
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            ITIRRAdmin.showSuccess(data.message);
                            setTimeout(() => location.reload(), 1500);
                        } else {
                            ITIRRAdmin.showError(data.message);
                        }
                    });
                }
            );
        }
    </script>
}