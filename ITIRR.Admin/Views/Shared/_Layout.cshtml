<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ITIRR Admin Panel</title>

    <!-- Add CSRF Token -->
    <meta name="csrf-token" content="@Html.AntiForgeryToken().ToString()" />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/images/itirr-logo.png" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <!-- Centralized CSS -->
    <link rel="stylesheet" href="~/css/admin-variables.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-global.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-components.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-pages.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <aside class="sidebar">
            <!-- Logo -->
            <div class="sidebar-logo">
                <img src="~/images/itirr-logo.png" alt="ITIRR" />
            </div>

            <!-- Sidebar Toggle Button -->
            <div class="sidebar-toggle">
                <i class="bi bi-chevron-left"></i>
            </div>

            <!-- Navigation Menu -->
            <nav class="sidebar-menu">
                <!-- Dashboard -->
                <a href="@Url.Action("Index", "Dashboard")" class="menu-item">
                    <i class="bi bi-speedometer2"></i>
                    <span>Dashboard</span>
                </a>

                <!-- Master Data Section -->
                <div class="menu-section">Master Data</div>

                <a href="@Url.Action("Index", "Countries")" class="menu-item">
                    <i class="bi bi-globe"></i>
                    <span>Countries</span>
                </a>

                <a href="@Url.Action("Index", "Cities")" class="menu-item">
                    <i class="bi bi-building"></i>
                    <span>Cities</span>
                </a>

                <!-- Vehicle Management Section -->
                <div class="menu-section">Vehicle Management</div>

                <div class="menu-item has-submenu">
                    <i class="bi bi-car-front"></i>
                    <span>Vehicle Setup</span>
                </div>
                <div class="submenu">
                    <a href="@Url.Action("Index", "VehicleTypes")" class="menu-item">
                        <i class="bi bi-tag"></i>
                        <span>Vehicle Types</span>
                    </a>
                    <a href="@Url.Action("Index", "VehicleCategories")" class="menu-item">
                        <i class="bi bi-collection"></i>
                        <span>Categories</span>
                    </a>
                    <a href="@Url.Action("Index", "VehicleBrands")" class="menu-item">
                        <i class="bi bi-bookmark"></i>
                        <span>Brands</span>
                    </a>
                    <a href="@Url.Action("Index", "VehicleModels")" class="menu-item">
                        <i class="bi bi-box"></i>
                        <span>Models</span>
                    </a>
                    <a href="@Url.Action("Index", "VehicleFeatures")" class="menu-item">
                        <i class="bi bi-stars"></i>
                        <span>Features</span>
                    </a>
                </div>

                <a href="@Url.Action("Index", "Vehicles")" class="menu-item">
                    <i class="bi bi-car-front-fill"></i>
                    <span>All Vehicles</span>
                </a>

                <a href="@Url.Action("Unverified", "Vehicles")" class="menu-item">
                    <i class="bi bi-exclamation-circle"></i>
                    <span>Pending Verification</span>
                    <span class="badge badge-warning">@ViewBag.PendingCount</span>
                </a>

                <!-- User Management Section -->
                <div class="menu-section">User Management</div>

                <a href="@Url.Action("Index", "Users")" class="menu-item">
                    <i class="bi bi-people"></i>
                    <span>All Users</span>
                </a>

                <a href="@Url.Action("Hosts", "Users")" class="menu-item">
                    <i class="bi bi-person-badge"></i>
                    <span>Hosts</span>
                </a>

                <a href="@Url.Action("Renters", "Users")" class="menu-item">
                    <i class="bi bi-person"></i>
                    <span>Renters</span>
                </a>

                <!-- Documents Section -->
                <div class="menu-section">Documents</div>

                <a href="@Url.Action("Index", "DocumentTypes")" class="menu-item">
                    <i class="bi bi-file-earmark-text"></i>
                    <span>Document Types</span>
                </a>

                <a href="@Url.Action("Pending", "Documents")" class="menu-item">
                    <i class="bi bi-file-earmark-check"></i>
                    <span>Pending Verification</span>
                    <span class="badge badge-warning">@ViewBag.PendingDocsCount</span>
                </a>

                <!-- Settings Section -->
                <div class="menu-section">System</div>

                <a href="@Url.Action("Index", "Settings")" class="menu-item">
                    <i class="bi bi-gear"></i>
                    <span>Settings</span>
                </a>

                <a href="@Url.Action("Index", "AuditLogs")" class="menu-item">
                    <i class="bi bi-clipboard-data"></i>
                    <span>Audit Logs</span>
                </a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Top Header -->
            <header class="top-header">
                <div class="header-left">
                    <!-- Mobile Menu Toggle -->
                    <div class="mobile-menu-toggle">
                        <i class="bi bi-list"></i>
                    </div>

                    <!-- Breadcrumb -->
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index", "Dashboard")">
                                    <i class="bi bi-house-door"></i> Home
                                </a>
                            </li>
                            @if (!string.IsNullOrEmpty(ViewData["Title"]?.ToString()))
                            {
                                <li class="breadcrumb-item active">@ViewData["Title"]</li>
                            }
                        </ol>
                    </nav>
                </div>

                <div class="header-right">
                    <!-- Search -->
                    <div class="header-icon search">
                        <i class="bi bi-search"></i>
                    </div>

                    <!-- Notifications -->
                    <div class="header-icon notification">
                        <i class="bi bi-bell"></i>
                        <span class="badge">3</span>
                    </div>

                    <!-- Messages -->
                    <div class="header-icon messages">
                        <i class="bi bi-envelope"></i>
                        <span class="badge">5</span>
                    </div>

                    <!-- User Dropdown -->
                    <div class="user-dropdown">
                        <div class="user-info">
                            <img src="~/images/default-avatar.svg" alt="User" class="user-avatar" />
                            <div class="user-details">
                                <div class="user-name">@User.Identity?.Name</div>
                                <div class="user-role">Administrator</div>
                            </div>
                            <i class="bi bi-chevron-down"></i>
                        </div>

                        <div class="user-menu">
                            <a href="@Url.Action("Profile", "Account")" class="user-menu-item">
                                <i class="bi bi-person"></i>
                                <span>My Profile</span>
                            </a>
                            <a href="@Url.Action("Settings", "Account")" class="user-menu-item">
                                <i class="bi bi-gear"></i>
                                <span>Settings</span>
                            </a>
                            <div class="user-menu-divider"></div>
                            <form asp-action="Logout" asp-controller="Account" method="post">
                                <button type="submit" class="user-menu-item" style="width: 100%; border: none; background: none; text-align: left;">
                                    <i class="bi bi-box-arrow-right"></i>
                                    <span>Logout</span>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <div class="page-content">
                <partial name="_Notifications" />
                @RenderBody()
            </div>
        </main>
    </div>

    <!-- Global CSRF Token for AJAX -->
    @Html.AntiForgeryToken()

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.0/dist/jquery.min.js"></script>

    <!-- jQuery Validation -->
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Centralized JS -->
    <script src="~/js/admin-global.js" asp-append-version="true"></script>
    <script src="~/js/admin-components.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)


    <style>
        #loadingOverlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7);
            z-index: 9999;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .loading-spinner {
            text-align: center;
        }

            .loading-spinner .spinner-border {
                width: 4rem;
                height: 4rem;
                border-width: 0.5rem;
            }

        .loading-text {
            color: white;
            font-size: 1.2rem;
            font-weight: 500;
        }
    </style>
    <div id="loadingOverlay" style="display: none;">
        <div class="loading-spinner">
            <div class="spinner-border text-light" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="loading-text mt-3">Please wait...</p>
        </div>
    </div>
</body>
</html>