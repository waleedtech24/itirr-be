@model ITIRR.Core.Entities.Country
@{
    ViewData["Title"] = "Edit Country";
}

<!-- Page Header -->
<div class="page-header">
    <h1>
        <i class="bi bi-pencil"></i> Edit Country
    </h1>
    <div class="page-actions">
        <a asp-action="Index" class="btn btn-outline-purple">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<!-- Form Container -->
<div class="form-container">
    <form asp-action="Edit" method="post" data-validate="true">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CreatedAt" />

        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="form-row">
            <div class="form-group">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="invalid-feedback"></span>
            </div>

            <div class="form-group">
                <label asp-for="Code" class="form-label"></label>
                <input asp-for="Code" class="form-control" maxlength="2" style="text-transform: uppercase;" required />
                <span asp-validation-for="Code" class="invalid-feedback"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label asp-for="PhoneCode" class="form-label"></label>
                <input asp-for="PhoneCode" class="form-control" required />
                <span asp-validation-for="PhoneCode" class="invalid-feedback"></span>
            </div>

            <div class="form-group">
                <label class="form-label">Status</label>
                <div class="form-check">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                    <label asp-for="IsActive" class="form-check-label">
                        Active
                    </label>
                </div>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-purple">
                <i class="bi bi-check-circle"></i> Update Country
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}