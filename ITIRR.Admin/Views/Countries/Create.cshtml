@model ITIRR.Core.Entities.Country
@{
    ViewData["Title"] = "Create Country";
}

<!-- Page Header -->
<div class="page-header">
    <h1>
        <i class="bi bi-plus-circle"></i> Create New Country
    </h1>
    <div class="page-actions">
        <a asp-action="Index" class="btn btn-outline-purple">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<!-- Form Container -->
<div class="form-container">
    <form asp-action="Create" method="post" data-validate="true">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="form-row">
            <div class="form-group">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="United Kingdom" required />
                <span asp-validation-for="Name" class="invalid-feedback"></span>
            </div>

            <div class="form-group">
                <label asp-for="Code" class="form-label"></label>
                <input asp-for="Code" class="form-control" placeholder="GB" maxlength="2" style="text-transform: uppercase;" required />
                <span asp-validation-for="Code" class="invalid-feedback"></span>
                <small class="text-muted">2-letter ISO country code</small>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label asp-for="PhoneCode" class="form-label"></label>
                <input asp-for="PhoneCode" class="form-control" placeholder="+44" required />
                <span asp-validation-for="PhoneCode" class="invalid-feedback"></span>
            </div>

            <div class="form-group">
                <label class="form-label">Status</label>
                <div class="form-check">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                    <label asp-for="IsActive" class="form-check-label">
                        Active (Available for selection)
                    </label>
                </div>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-purple">
                <i class="bi bi-check-circle"></i> Create Country
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Auto uppercase country code
        document.querySelector('input[name="Code"]').addEventListener('input', function() {
            this.value = this.value.toUpperCase();
        });
    </script>
}