@model ITIRR.Core.Entities.VehicleType
@{
    ViewData["Title"] = "Create Vehicle Type";
}

<div class="page-header">
    <h1><i class="bi bi-plus-circle"></i> Create Vehicle Type</h1>
    <div class="page-actions">
        <a asp-action="Index" class="btn btn-outline-purple">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>
</div>

<div class="form-container">
    <form asp-action="Create" method="post" data-validate="true">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="form-row">
            <div class="form-group">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Car" required />
                <span asp-validation-for="Name" class="invalid-feedback"></span>
            </div>

            <div class="form-group">
                <label asp-for="Code" class="form-label"></label>
                <input asp-for="Code" class="form-control" placeholder="CAR" style="text-transform: uppercase;" required />
                <span asp-validation-for="Code" class="invalid-feedback"></span>
                <small class="text-muted">Unique identifier (e.g., CAR, JET, YACHT)</small>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Luxury and prestige cars"></textarea>
            <span asp-validation-for="Description" class="invalid-feedback"></span>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label asp-for="BookingType" class="form-label"></label>
                <select asp-for="BookingType" class="form-control" required>
                    <option value="">Select Booking Type</option>
                    <option value="Direct">Direct - Instant booking</option>
                    <option value="Inquiry">Inquiry - Quote based</option>
                </select>
                <span asp-validation-for="BookingType" class="invalid-feedback"></span>
            </div>

            <div class="form-group">
                <label asp-for="DisplayOrder" class="form-label"></label>
                <input asp-for="DisplayOrder" class="form-control" type="number" min="1" value="1" required />
                <span asp-validation-for="DisplayOrder" class="invalid-feedback"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="form-check">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                <label asp-for="IsActive" class="form-check-label">Active</label>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-purple">
                <i class="bi bi-check-circle"></i> Create Vehicle Type
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelector('input[name="Code"]').addEventListener('input', function() {
            this.value = this.value.toUpperCase().replace(/[^A-Z_]/g, '');
        });
    </script>
}