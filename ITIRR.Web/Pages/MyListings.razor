@page "/my-listings"
@layout ITIRR.Web.Shared.DashboardLayout
@attribute [Authorize]
@inject NavigationManager Navigation
@inject CustomAuthStateProvider AuthStateProvider
@inject HttpClient Http
@using Microsoft.AspNetCore.Authorization
@using ITIRR.Web.Auth
@using System.Net.Http.Json
@using System.Text.Json

<div class="container-fluid">

    <!-- BREADCRUMB -->
    <div class="row">
        <div class="col-md-12">
            <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                <ol class="breadcrumb custom-breadcrumb">
                    <li class="breadcrumb-item"><a href="/partner-home">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">All Listed Vehicles</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- HEADING -->
    <div class="row agency-header">
        <div class="col-md-12 listed-btn-sec">
            <h1>All Listed Vehicles</h1>
            <a href="/addvehicles" class="btn vehicle">List New Vehicle</a>
        </div>
        <div class="col-md-12">
            <p>View verified host details and rental listings. Transparency and trust are core to every booking.</p>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary"></div>
            <p class="mt-3">Loading your listings...</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">@errorMessage</div>
    }
    else
    {
        <!-- TABS ROW: Active/Inactive on LEFT, Category filter on RIGHT -->
        <div class="row align-items-center mb-0">

            <!-- LEFT: Active / Inactive tabs -->
            <div class="col-md-6 col-12">
                <ul class="nav nav-tabs d-flex justify-content-start agency-tabs">
                    <li class="nav-item">
                        <a class="nav-link Basic @(activeTab == "inactive" ? "active" : "")"
                           href="#" @onclick="SetInactiveTab" @onclick:preventDefault="true">
                            In-active Listings
                            <span class="badge bg-secondary ms-1">@FilteredInactive.Count</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(activeTab == "active" ? "active" : "")"
                           href="#" @onclick="SetActiveTab" @onclick:preventDefault="true">
                            Active Listings
                            <span class="badge bg-success ms-1">@FilteredActive.Count</span>
                        </a>
                    </li>
                </ul>
            </div>

            <!-- RIGHT: Category filter buttons -->
            <div class="col-md-6 col-12 d-flex justify-content-md-end justify-content-start gap-2 pb-1">
                <button type="button"
                        class="btn @(selectedCategory == "car" ? "vehicle" : "btn-outline-secondary")"
                        style="border-radius:20px; padding:6px 18px; font-size:13px;"
                        @onclick="@(() => SetCategory("car"))">
                    <i class="fa-solid fa-car-rear me-1"></i> Cars
                    <span class="badge @(selectedCategory == "car" ? "bg-light text-dark" : "bg-secondary") ms-1">
                        @CarCount
                    </span>
                </button>
                <button type="button"
                        class="btn @(selectedCategory == "boat" ? "vehicle" : "btn-outline-secondary")"
                        style="border-radius:20px; padding:6px 18px; font-size:13px;"
                        @onclick="@(() => SetCategory("boat"))">
                    <i class="fa-solid fa-sailboat me-1"></i> Boats
                    <span class="badge @(selectedCategory == "boat" ? "bg-light text-dark" : "bg-secondary") ms-1">
                        @BoatCount
                    </span>
                </button>
                <button type="button"
                        class="btn @(selectedCategory == "jet" ? "vehicle" : "btn-outline-secondary")"
                        style="border-radius:20px; padding:6px 18px; font-size:13px;"
                        @onclick="@(() => SetCategory("jet"))">
                    <i class="fa-solid fa-plane me-1"></i> Jets
                    <span class="badge @(selectedCategory == "jet" ? "bg-light text-dark" : "bg-secondary") ms-1">
                        @JetCount
                    </span>
                </button>
            </div>
        </div>

        <!-- ========== INACTIVE TAB ========== -->
        @if (activeTab == "inactive")
        {
            @if (!FilteredInactive.Any())
            {
                <div class="text-center py-5">
                    <i class="fa-solid @GetCategoryIcon(selectedCategory) fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No inactive @GetCategoryLabel(selectedCategory) listings</h5>
                </div>
            }
            else
            {
                <div class="row mt-3">
                    @foreach (var listing in FilteredInactive)
                    {
                        var l = listing;
                        <div class="col-12 col-sm-6 col-lg-4 mb-4">
                            <div class="car-cards">
                                @if (!string.IsNullOrEmpty(l.FirstPhotoUrl))
                                {
                                    <img src="@GetImageUrl(l.FirstPhotoUrl)"
                                         alt="Vehicle"
                                         style="width:100%;height:200px;object-fit:cover;" />
                                }
                                else
                                {
                                    <div class="d-flex align-items-center justify-content-center bg-light"
                                         style="width:100%;height:200px;">
                                        <i class="fa-solid @GetVehicleIcon(l.VehicleType) fa-3x text-muted"></i>
                                    </div>
                                }
                                @* <div style="position:relative;"> *@
                                @*     <span style="position:absolute; top:-28px; right:10px; *@
                                @*                  background:#6a0dad; color:#fff; font-size:11px; *@
                                @*                  padding:2px 10px; border-radius:0 0 8px 8px;"> *@
                                @*         @GetVehicleTypeLabel(l.VehicleType) *@
                                @*     </span> *@
                                @* </div> *@
                                <div class="car-body">
                                    <h3>@GetVehicleTitle(l)</h3>
                                    <p>@GetVehicleSubtitle(l)</p>
                                    <hr class="my-hr" />
                                </div>
                                <a href="@GetEditUrl(l)" class="edit-btn w-100">
                                    <i class="fa-solid fa-pen-to-square"></i> &nbsp; Edit Detail
                                </a>
                            </div>
                        </div>
                    }
                </div>
            }
        }

        <!-- ========== ACTIVE TAB ========== -->
        @if (activeTab == "active")
        {
            @if (!FilteredActive.Any())
            {
                <div class="text-center py-5">
                    <i class="fa-solid @GetCategoryIcon(selectedCategory) fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No active @GetCategoryLabel(selectedCategory) listings yet</h5>
                    <a href="/addvehicles" class="btn vehicle mt-3">List Your First Vehicle</a>
                </div>
            }
            else
            {
                <div class="row mt-3">
                    @foreach (var listing in FilteredActive)
                    {
                        var l = listing;
                        <div class="col-12 col-sm-6 col-lg-4 mb-4">
                            <div class="car-cards">
                                @if (!string.IsNullOrEmpty(l.FirstPhotoUrl))
                                {
                                    <img src="@GetImageUrl(l.FirstPhotoUrl)"
                                         alt="Vehicle"
                                         style="width:100%;height:200px;object-fit:cover;" />
                                }
                                else
                                {
                                    <div class="d-flex align-items-center justify-content-center bg-light"
                                         style="width:100%;height:200px;">
                                        <i class="fa-solid @GetVehicleIcon(l.VehicleType) fa-3x text-muted"></i>
                                    </div>
                                }
                                @* <div style="position:relative;"> *@
                                @*     <span style="position:absolute; top:-28px; right:10px; *@
                                @*                  background:#6a0dad; color:#fff; font-size:11px; *@
                                @*                  padding:2px 10px; border-radius:0 0 8px 8px;"> *@
                                @*         @GetVehicleTypeLabel(l.VehicleType) *@
                                @*     </span> *@
                                @* </div> *@
                                <div class="car-body">
                                    <h3>@GetVehicleTitle(l)</h3>
                                    <p>@GetVehicleSubtitle(l)</p>
                                    <hr class="my-hr" />
                                </div>
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-8 col-md-10">
                                            <a href="#" class="btn btn-light text-secondary no-border-select-input-1 list-span w-100">
                                                <span class="px-2 list-span">
                                                    <i class="fa-light fa-arrow-up-from-arc"></i>
                                                </span>List Vehicle
                                            </a>
                                        </div>
                                        <div class="col-4 col-md-2">
                                            <a href="@GetEditUrl(l)" class="btn edit-list mx-auto h-100">
                                                <i class="fa-regular align-items-center d-flex justify-content-center py-1 text-white fa-pen-to-square"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        }
    }

</div>

@code {
    private bool isLoading = true;
    private string errorMessage = string.Empty;
    private string activeTab = "inactive";
    private string selectedCategory = "car";

    private List<VehicleCard> allListings = new();

    // ── Filtered by category + status ──
    private List<VehicleCard> FilteredActive => allListings
        .Where(l => l.Status == "Active" && l.VehicleType == selectedCategory).ToList();

    private List<VehicleCard> FilteredInactive => allListings
        .Where(l => l.VehicleType == selectedCategory &&
                   (l.Status == "Inactive" || l.Status == "Pending" || l.Status == "Draft")).ToList();

    // ── Counts ──
    private int CarCount => allListings.Count(l => l.VehicleType == "car");
    private int BoatCount => allListings.Count(l => l.VehicleType == "boat");
    private int JetCount => allListings.Count(l => l.VehicleType == "jet");

    private string GetImageUrl(string? photoUrl)
    {
        if (string.IsNullOrEmpty(photoUrl)) return string.Empty;
        if (photoUrl.StartsWith("http://") || photoUrl.StartsWith("https://")) return photoUrl;
        var apiBase = Http.BaseAddress?.ToString().TrimEnd('/') ?? string.Empty;
        return apiBase + "/" + photoUrl.TrimStart('/');
    }

    protected override async Task OnInitializedAsync()
    {
        var token = await AuthStateProvider.GetAccessTokenAsync();
        if (!string.IsNullOrEmpty(token))
            Http.DefaultRequestHeaders.Authorization =
                new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);

        await LoadAllListings();
    }

    private async Task LoadAllListings()
    {
        isLoading = true;
        errorMessage = string.Empty;
        allListings.Clear();

        await Task.WhenAll(
            LoadCarListings(),
            LoadBoatListings(),
            LoadJetListings()
        );

        isLoading = false;
    }

    // ── CARS ──
    private async Task LoadCarListings()
    {
        try
        {
            var response = await Http.GetAsync("api/v1/vehicle-listing/my-listings");
            var json = await response.Content.ReadAsStringAsync();
            var result = JsonSerializer.Deserialize<ApiResp<List<VehicleCard>>>(json,
                new JsonSerializerOptions { PropertyNameCaseInsensitive = true });

            if (result?.Success == true && result.Data != null)
                foreach (var item in result.Data)
                {
                    item.VehicleType = "car";
                    allListings.Add(item);
                }
        }
        catch { }
    }

    // ── BOATS ──
    private async Task LoadBoatListings()
    {
        try
        {
            var response = await Http.GetAsync("api/v1/boat-listing/my-listings");
            var json = await response.Content.ReadAsStringAsync();
            var result = JsonSerializer.Deserialize<ApiResp<List<VehicleCard>>>(json,
                new JsonSerializerOptions { PropertyNameCaseInsensitive = true });

            if (result?.Success == true && result.Data != null)
                foreach (var item in result.Data)
                {
                    item.VehicleType = "boat";
                    allListings.Add(item);
                }
        }
        catch { }
    }

    // ── JETS ──
    private async Task LoadJetListings()
    {
        try
        {
            var response = await Http.GetAsync("api/v1/jet-listing/my-listings");
            var json = await response.Content.ReadAsStringAsync();
            var result = JsonSerializer.Deserialize<ApiResp<List<VehicleCard>>>(json,
                new JsonSerializerOptions { PropertyNameCaseInsensitive = true });

            if (result?.Success == true && result.Data != null)
                foreach (var item in result.Data)
                {
                    item.VehicleType = "jet";
                    allListings.Add(item);
                }
        }
        catch { }
    }

    private void SetActiveTab() => activeTab = "active";
    private void SetInactiveTab() => activeTab = "inactive";
    private void SetCategory(string cat) => selectedCategory = cat;

    // ── TITLE: uses correct field names per entity ──
    private string GetVehicleTitle(VehicleCard l) => l.VehicleType switch
    {
        "boat" => !string.IsNullOrEmpty(l.BoatMake)
                  ? $"{l.BoatMake} {l.BoatModel}".Trim()
                  : "Yacht / Boat",

        "jet" => !string.IsNullOrEmpty(l.AircraftMake)
                  ? $"{l.AircraftMake} {l.AircraftModel}".Trim()
                  : "Private Jet",

        _ => !string.IsNullOrEmpty(l.LicencePlateNumber)
                  ? $"Car — {l.LicencePlateNumber}"
                  : "Luxury Car"
    };

    // ── SUBTITLE: uses correct field names per entity ──
    private string GetVehicleSubtitle(VehicleCard l) => l.VehicleType switch
    {
        "boat" => string.Join(" · ", new[]
                  { l.State, l.BoatType, l.BoatYear, l.RegistrationNumber }
                  .Where(s => !string.IsNullOrEmpty(s))!),

        "jet" => string.Join(" · ", new[]
                  { l.State, l.HomeAirport, l.TailNumber, l.AircraftCategory }
                  .Where(s => !string.IsNullOrEmpty(s))!),

        _ => string.Join(" · ", new[]
                  { l.State, l.OdometerReading, l.PrimaryGoal }
                  .Where(s => !string.IsNullOrEmpty(s))!)
    };

    private string GetVehicleIcon(string? type) => type?.ToLower() switch
    {
        "boat" => "fa-sailboat",
        "jet" => "fa-plane",
        _ => "fa-car-rear"
    };

    private string GetVehicleTypeLabel(string? type) => type?.ToLower() switch
    {
        "boat" => "Yacht / Boat",
        "jet" => "Private Jet",
        _ => "Luxury Car"
    };

    private string GetCategoryIcon(string cat) => cat switch
    {
        "boat" => "fa-sailboat",
        "jet" => "fa-plane",
        _ => "fa-car-rear"
    };

    private string GetCategoryLabel(string cat) => cat switch
    {
        "boat" => "Boat",
        "jet" => "Jet",
        _ => "Car"
    };

    // ── MODELS ──
    class ApiResp<T>
    {
        public bool Success { get; set; }
        public string Message { get; set; } = string.Empty;
        public T? Data { get; set; }
    }

    private string GetEditUrl(VehicleCard l) => l.VehicleType switch
    {
        "boat" => $"/edit-boat/{l.ListingId}",
        "jet" => $"/edit-jet/{l.ListingId}",
        _ => $"/edit-listing/{l.ListingId}"
    };

    class VehicleCard
    {
        public Guid ListingId { get; set; }
        public string VehicleType { get; set; } = string.Empty;
        public string Status { get; set; } = string.Empty;
        public int CurrentStep { get; set; }
        public string? FirstPhotoUrl { get; set; }
        public DateTime CreatedAt { get; set; }

        // ── Car fields (VehicleListing entity) ──
        public string? LicencePlateNumber { get; set; }
        public string? VIN { get; set; }
        public string? State { get; set; }
        public string? ZipCode { get; set; }
        public string? OdometerReading { get; set; }
        public string? Transmission { get; set; }
        public string? PrimaryGoal { get; set; }

        // ── Boat fields (BoatListing entity) ──
        public string? BoatType { get; set; }
        public string? BoatMake { get; set; }
        public string? BoatModel { get; set; }
        public string? BoatYear { get; set; }
        public string? BoatLength { get; set; }
        public string? RegistrationNumber { get; set; }

        // ── Jet fields (JetListing entity) ──
        public string? AircraftMake { get; set; }
        public string? AircraftModel { get; set; }
        public string? AircraftYear { get; set; }
        public string? AircraftCategory { get; set; }
        public string? TailNumber { get; set; }
        public string? HomeAirport { get; set; }
        public string? HangarLocation { get; set; }
    }
}