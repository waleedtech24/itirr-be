@page "/my-listings"
@layout ITIRR.Web.Shared.DashboardLayout
@attribute [Authorize]
@inject NavigationManager Navigation
@inject CustomAuthStateProvider AuthStateProvider
@inject HttpClient Http
@using Microsoft.AspNetCore.Authorization
@using ITIRR.Web.Auth
@using System.Net.Http.Json
@using System.Text.Json

<div class="container-fluid">

    <!-- BREADCRUMB -->
    <div class="row">
        <div class="col-md-12">
            <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                <ol class="breadcrumb custom-breadcrumb">
                    <li class="breadcrumb-item"><a href="/partner-home">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">All Listed Vehicles</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- HEADING -->
    <div class="row agency-header">
        <div class="col-md-12 listed-btn-sec">
            <h1>All Listed Vehicles</h1>
            <a href="/addvehicles" class="btn vehicle">List New Vehicle</a>
        </div>
        <div class="col-md-12">
            <p>View verified host details and rental listings. Transparency and trust are core to every booking.</p>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary"></div>
            <p class="mt-3">Loading your listings...</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">@errorMessage</div>
    }
    else
    {
        <!-- TABS -->
        <div class="row">
            <div class="col-md-12">
                <ul class="nav nav-tabs d-flex justify-content-start agency-tabs">
                    <li class="nav-item">
                        <a class="nav-link Basic @(activeTab == "inactive" ? "active" : "")"
                           href="#" @onclick="SetInactiveTab" @onclick:preventDefault="true">
                            In-active Listings
                            <span class="badge bg-secondary ms-1">@inactiveListings.Count</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(activeTab == "active" ? "active" : "")"
                           href="#" @onclick="SetActiveTab" @onclick:preventDefault="true">
                            Active Listings
                            <span class="badge bg-success ms-1">@activeListings.Count</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- INACTIVE TAB -->
        @if (activeTab == "inactive")
        {
            @if (!inactiveListings.Any())
            {
                <div class="text-center py-5">
                    <i class="fa-solid fa-car-rear fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No inactive listings</h5>
                </div>
            }
            else
            {
                <div class="row mt-3">
                    @foreach (var listing in inactiveListings)
                    {
                        var l = listing;
                        <div class="col-12 col-sm-6 col-lg-4 mb-4">
                            <div class="car-cards">
                                @if (!string.IsNullOrEmpty(l.FirstPhotoUrl))
                                {
                                    <img src="@GetImageUrl(l.FirstPhotoUrl)"
                                         alt="Vehicle"
                                         style="width:100%;height:200px;object-fit:cover;" />
                                }
                                else
                                {
                                    <div class="d-flex align-items-center justify-content-center bg-light"
                                         style="width:100%;height:200px;">
                                        <i class="fa-solid @GetVehicleIcon(l.VehicleType) fa-3x text-muted"></i>
                                    </div>
                                }
                                <div class="car-body">
                                    <h3>@GetVehicleTitle(l)</h3>
                                    <p>@GetVehicleSubtitle(l)</p>
                                    <hr class="my-hr" />
                                </div>
                                <!-- ✅ Inactive = Edit button only (full width) -->
                                <a href="#" class="edit-btn w-100">
                                    <i class="fa-solid fa-pen-to-square"></i> &nbsp; Edit Detail
                                </a>
                            </div>
                        </div>
                    }
                </div>
            }
        }

        <!-- ACTIVE TAB -->
        @if (activeTab == "active")
        {
            @if (!activeListings.Any())
            {
                <div class="text-center py-5">
                    <i class="fa-solid fa-car-rear fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No active listings yet</h5>
                    <a href="/addvehicles" class="btn vehicle mt-3">List Your First Vehicle</a>
                </div>
            }
            else
            {
                <div class="row mt-3">
                    @foreach (var listing in activeListings)
                    {
                        var l = listing;
                        <div class="col-12 col-sm-6 col-lg-4 mb-4">
                            <div class="car-cards">
                                @if (!string.IsNullOrEmpty(l.FirstPhotoUrl))
                                {
                                    <img src="@GetImageUrl(l.FirstPhotoUrl)"
                                         alt="Vehicle"
                                         style="width:100%;height:200px;object-fit:cover;" />
                                }
                                else
                                {
                                    <div class="d-flex align-items-center justify-content-center bg-light"
                                         style="width:100%;height:200px;">
                                        <i class="fa-solid @GetVehicleIcon(l.VehicleType) fa-3x text-muted"></i>
                                    </div>
                                }
                                <div class="car-body">
                                    <h3>@GetVehicleTitle(l)</h3>
                                    <p>@GetVehicleSubtitle(l)</p>
                                    <hr class="my-hr" />
                                </div>
                                <!-- ✅ Active = List Vehicle button + Edit square button -->
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-8 col-md-10">
                                            <a href="#" class="btn btn-light text-secondary no-border-select-input-1 list-span w-100">
                                                <span class="px-2 list-span">
                                                    <i class="fa-light fa-arrow-up-from-arc"></i>
                                                </span>List Vehicle
                                            </a>
                                        </div>
                                        <div class="col-4 col-md-2">
                                            <a href="#" class="btn edit-list mx-auto h-100">
                                                <i class="fa-regular align-items-center d-flex justify-content-center py-1 text-white fa-pen-to-square"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        }
    }

</div>

@code {
    private bool isLoading = true;
    private string errorMessage = string.Empty;
    private string activeTab = "inactive"; // default — show inactive first

    private List<VehicleCard> allListings = new();
    private List<VehicleCard> activeListings = new();
    private List<VehicleCard> inactiveListings = new();

    private string GetImageUrl(string? photoUrl)
    {
        if (string.IsNullOrEmpty(photoUrl)) return string.Empty;
        if (photoUrl.StartsWith("http://") || photoUrl.StartsWith("https://"))
            return photoUrl;
        var apiBase = Http.BaseAddress?.ToString().TrimEnd('/') ?? string.Empty;
        var cleanPath = "/" + photoUrl.TrimStart('/');
        return apiBase + cleanPath;
    }

    protected override async Task OnInitializedAsync()
    {
        var token = await AuthStateProvider.GetAccessTokenAsync();
        if (!string.IsNullOrEmpty(token))
            Http.DefaultRequestHeaders.Authorization =
                new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);

        await LoadListings();
    }

    private async Task LoadListings()
    {
        isLoading = true;
        errorMessage = string.Empty;
        try
        {
            var response = await Http.GetAsync("api/v1/vehicle-listing/my-listings");
            var json = await response.Content.ReadAsStringAsync();
            var result = JsonSerializer.Deserialize<ApiResp<List<VehicleCard>>>(json,
                new JsonSerializerOptions { PropertyNameCaseInsensitive = true });

            if (result?.Success == true && result.Data != null)
            {
                allListings = result.Data;

                // Active = only Active status
                activeListings = allListings
                    .Where(l => l.Status == "Active")
                    .ToList();

                // Inactive = Inactive + Pending + Draft
                inactiveListings = allListings
                    .Where(l => l.Status == "Inactive" ||
                                l.Status == "Pending" ||
                                l.Status == "Draft")
                    .ToList();
            }
            else
            {
                errorMessage = result?.Message ?? "Failed to load listings.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Error loading listings: " + ex.Message;
        }
        finally { isLoading = false; }
    }

    private void SetActiveTab() => activeTab = "active";
    private void SetInactiveTab() => activeTab = "inactive";

    private string GetVehicleTitle(VehicleCard l)
    {
        if (!string.IsNullOrEmpty(l.LicencePlateNumber))
            return $"{GetVehicleTypeLabel(l.VehicleType)} — {l.LicencePlateNumber}";
        return GetVehicleTypeLabel(l.VehicleType);
    }

    private string GetVehicleSubtitle(VehicleCard l)
    {
        var parts = new List<string>();
        if (!string.IsNullOrEmpty(l.State)) parts.Add(l.State);
        if (!string.IsNullOrEmpty(l.OdometerReading)) parts.Add(l.OdometerReading);
        if (!string.IsNullOrEmpty(l.PrimaryGoal)) parts.Add(l.PrimaryGoal);
        return parts.Any() ? string.Join(" · ", parts) : "No details yet.";
    }

    private string GetVehicleIcon(string? type) => type?.ToLower() switch
    {
        "boat" => "fa-sailboat",
        "jet" => "fa-plane",
        _ => "fa-car-rear"
    };

    private string GetVehicleTypeLabel(string? type) => type?.ToLower() switch
    {
        "boat" => "Yacht / Boat",
        "jet" => "Private Jet",
        _ => "Luxury Car"
    };

    class ApiResp<T>
    {
        public bool Success { get; set; }
        public string Message { get; set; } = string.Empty;
        public T? Data { get; set; }
    }

    class VehicleCard
    {
        public Guid ListingId { get; set; }
        public string VehicleType { get; set; } = string.Empty;
        public string Status { get; set; } = string.Empty;
        public int CurrentStep { get; set; }
        public string? LicencePlateNumber { get; set; }
        public string? VIN { get; set; }
        public string? StreetAddress { get; set; }
        public string? State { get; set; }
        public string? ZipCode { get; set; }
        public string? OdometerReading { get; set; }
        public string? Transmission { get; set; }
        public string? PrimaryGoal { get; set; }
        public string? FirstPhotoUrl { get; set; }
        public DateTime CreatedAt { get; set; }
    }
}